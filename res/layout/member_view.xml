<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="left"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/add_item" />

    <ListView
        android:id="@+id/listFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAddItem"
        android:layout_alignRight="@+id/btnAccount"
        android:layout_below="@+id/txtFound" >

    </ListView>

    <ListView
        android:id="@+id/listLost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listFound"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtFound"
        android:layout_toRightOf="@+id/listFound" >

    </ListView>

    <TextView
        android:id="@+id/txtLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listLost"
        android:layout_alignLeft="@+id/listLost"
        android:layout_marginLeft="32dp"
        android:text="@string/lost_items"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnSearch"
        android:layout_marginLeft="24dp"
        android:text="@string/found_items"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/btn_admin"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnAccount"
        android:text="@string/search_for_items" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSearch"
        android:layout_below="@+id/btnAccount"
        android:layout_toLeftOf="@+id/btnSearch"
        android:entries="@array/entries"
        android:prompt="@string/prompt" />

    <Button
        android:id="@+id/btnAccount"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAdmin"
        android:layout_alignBottom="@+id/btnAdmin"
        android:layout_alignParentLeft="true"
        android:text="@string/account_preferences"
        android:textSize="@dimen/btnAccount" />

</RelativeLayout>