<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="left"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAddItem"
        android:layout_alignRight="@+id/btnAccount"
        android:layout_below="@+id/btnSearch" >

    </ListView>

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/btn_admin"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnAccount"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAdmin"
        android:layout_alignBottom="@+id/btnAdmin"
        android:layout_alignParentLeft="true"
        android:text="@string/account_preferences"
        android:textSize="@dimen/btnAccount" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnAccount"
        android:text="@string/search_for_items" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listFound"
        android:layout_toRightOf="@+id/btnSearch"
        android:entries="@array/entries"
        android:prompt="@string/prompt" />

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:text="@string/add_item" />

    <EditText
        android:id="@+id/txtDateChooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date_button"
        android:layout_toRightOf="@+id/btnSearch"
        android:ems="10"
        android:inputType="text|date" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtDateChooser"
        android:layout_toRightOf="@+id/btnSearch"
        android:text="@string/lblDate" />

    <Button
        android:id="@+id/date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listFound"
        android:layout_alignLeft="@+id/txtDateChooser"
        android:layout_marginBottom="36dp"
        android:text="@string/date_button" />

</RelativeLayout>